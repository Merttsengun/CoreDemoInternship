@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<h1>Yeni Blog Girişi</h1>
<br />

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
 @Html.Label("Blog Başlığı") 
 @Html.TextBoxFor(x=>x.BlogTitle, new {@class="form-control"})
 @Html.ValidationMessageFor(x=>x.BlogTitle)
    <br />
    <br />

    @Html.Label("Blog Görseli")
    <input type="file" name="BlogImage" class="form-control">  
    @Html.ValidationMessageFor(x => x.BlogImage)
    
    <br />
    <br />

    @Html.Label("Blog Küçük Görseli")
    @Html.TextBoxFor(x => x.BlogThumbnailImgae , new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Kategori")
    
    var categories = ViewBag.cv as List<SelectListItem>;
     

    @Html.DropDownListFor(x => x.CategoryID, categories ?? new List<SelectListItem>(), new { @class = "form-control" })

    @* @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" }) //hata  *@

    <br />
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent,15,3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />
    <br />
    <button class="btn btn-info">Yazıyı Kaydet</button>   
}