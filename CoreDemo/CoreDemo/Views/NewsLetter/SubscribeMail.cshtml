		<input type="email" id="txtmail" placeholder="Email" required="" name="Mail">
		<input type="submit" id ="btn" value="Abone Ol">
	
</div>

<script type="text/javascript">
	
	$("#btn").click(function () {
		let values = {
			Mail: $("#txtmail").val()
		};
		$.ajax({
			type: "post",
			url: "/NewsLetter/SubscribeMail/",
			data : values,
			success: function (func) {
				alert("Abone olma işlemi başarılır bir şekilde tamamlandı");
				$("#txtmail").val("")
			}
			
		});
	});

</script>

