@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori</h1>
<br />
<table class="table table-ordered">
<tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Sil</th>
    <th>Aktif Yap</th>
    <th>Düzenle</th>

</tr>   
@foreach(var item in Model)
{
    <tr>
        <th>@item.CategoryID</th>
        <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn"
                onclick="return confirm('Silmek istediğinizden emin misiniz');" class="btn btn-danger">Pasif Yap</td>
        
        <td><a href="#" class="btn btn-warning">Aktif Yap</td>
        <td><a href="#" class="btn btn-success">Düzenle</td>

    </tr>
}
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni Kategori</a>
<br /> <br />


@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))